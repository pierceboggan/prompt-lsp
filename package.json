{
  "name": "prompt-lsp",
  "version": "1.0.0",
  "description": "Language Server Protocol implementation for analyzing, validating, and improving AI prompts",
  "main": "./out/server.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile && cd client && npm run compile",
    "build:all": "npm run compile && cd client && npm install && npm run compile",
    "test": "vitest run",
    "lint": "eslint src",
    "clean": "rm -rf out && cd client && rm -rf out",
    "preinstall": "cd client && npm install"
  },
  "keywords": [
    "lsp",
    "language-server",
    "ai",
    "prompt",
    "llm",
    "prompt-engineering"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "tiktoken": "^1.0.22",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.1.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
