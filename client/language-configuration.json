{
  "comments": {
    "lineComment": "//",
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"],
    ["{{", "}}"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "`", "close": "`" },
    { "open": "{{", "close": "}}" },
    { "open": "<", "close": ">" },
    { "open": "<!--", "close": "-->" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["{{", "}}"],
    ["<", ">"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*<[a-z_]+>|^\\s*#{1,6}\\s",
      "end": "^\\s*</[a-z_]+>|^\\s*#{1,6}\\s"
    }
  }
}
